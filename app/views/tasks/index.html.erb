<p class="alert" id="notice"><%= notice %></p>

<h2>スケジュール一覧</h2>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>スケジュール更新日時</th>
      <th>確認</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.title %></td>
        <td><%= task.start_date.strftime('%Y年%m月%d日') %></td>
        <td><%= task.end_date.strftime('%Y年%m月%d日') %></td>
        <td class="allday">
          <% checked = '○' %><% unchecked = '' %>
          <% if task.allday == true %>
            <%= checked %>
          <% elsif task.allday == false %>
            <%= unchecked %>
          <% end %>
        </td>
        <td><%= task.updated_at.to_s(:datetime_jp) %></td>
        <td><%= link_to '確認', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: 'タスクを削除します。よろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

